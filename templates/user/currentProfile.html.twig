{% extends 'base.html.twig' %}

{% block title %}Mon profil
{% endblock %}

{% block body %}
	<style>
		h3 {
			margin-bottom: 0.5rem;
			margin-top: 1rem;
			font-weight: normal;
		}
		form button {
			position: relative;
			top: 49px;
			background: #fdd661;
			color: white;
		}

		.divButtonDelete button {
			position: relative;
			left: 900px;
			background: #ee642e;
			color: white;
		}

		.divButtonDelete a {
			cursor: pointer;
		}
	</style>
	<main>
		<section class="sectionProfile ">
			<h1>La page de profil de l'utilisateur connect√©
				{{app.user.firstname}}</h1>

			{{ form_start(form)}}
			{{form_row(form.firstname)}}
			{{form_row(form.lastname)}}
			{{form_row(form.email)}}

			{{form_row(form.imageProfile,{'required':false})}}
			{{form_row(form.submit)}}

			{{form_end(form,{'render_rest': false})}}

			<div class="divButtonDelete">
				<a href="{{path('user_deleting',{id:app.user.id})}}" title="supprimer mon compte">
					<button>Supprimer mon compte</button>
				</a>
			</div>
		</section>

		{% include 'partials/_questionPlusComment.html.twig' with {'user': app.user} %}

	</main>
{% endblock %}
